  keytool -genkey -v -keystore c:\Users\ASUS\key_name.jks -storetype JKS -keyalg RSA -keysize 2048 -validity 10000 -alias upload

# Keytool Migrated
keytool -importkeystore -srckeystore F:\keystores\buykrr\buykrr.jks -destkeystore F:\keystores\buykrr\buykrr.jks -deststoretype pkcs12


# Flutter Resize Layout
import 'package:flutter/widgets.dart';

class SizeConfig {
			static MediaQueryData _mediaQueryData;
			static double screenWidth;
			static double screenHeight;
			static double blockSizeHorizontal;
			static double blockSizeVertical;
			
			static double _safeAreaHorizontal;
			static double _safeAreaVertical;
			static double safeBlockHorizontal;
			static double safeBlockVertical;
			
			void init(BuildContext context) {
				_mediaQueryData = MediaQuery.of(context);
				screenWidth = _mediaQueryData.size.width;
				screenHeight = _mediaQueryData.size.height;
				blockSizeHorizontal = screenWidth / 100;
				blockSizeVertical = screenHeight / 100;
				
				_safeAreaHorizontal = _mediaQueryData.padding.left + 
					_mediaQueryData.padding.right;
				_safeAreaVertical = _mediaQueryData.padding.top +
					_mediaQueryData.padding.bottom;
				safeBlockHorizontal = (screenWidth -
					_safeAreaHorizontal) / 100;
				safeBlockVertical = (screenHeight -
					_safeAreaVertical) / 100;
			}
		}
		
		
